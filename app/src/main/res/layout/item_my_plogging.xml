<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_round_corners_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <!-- 선착순 배너 -->
            <TextView
                android:id="@+id/tv_plogging_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="승인제"
                android:textColor="@color/white"
                style="@style/AndroidCaption1"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/shape_text_full"
                app:layout_constraintBottom_toTopOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- 진행중 상태 (오른쪽 상단에 위치) -->
            <LinearLayout
                android:id="@+id/tvStatusContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="삭제"
                    android:textColor="@color/deep_red"
                    style="@style/AndroidCaption5"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp">
                </TextView>

                <ImageView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_green_circle"
                    android:contentDescription="진행중"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진행중"
                    style="@style/AndroidCaption3"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star_gray"
                    android:contentDescription="Star Icon" />
            </LinearLayout>
        </LinearLayout>

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상도 한바퀴 플로깅"
        style="@style/AndroidBody2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <!-- 위치와 날짜 및 시간 (왼쪽 위치, 오른쪽 날짜) -->
    <LinearLayout
        android:id="@+id/location_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:contentDescription="Location Icon"
                android:src="@drawable/ic_map" />

            <TextView
                android:id="@+id/tvStartLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:paddingLeft="5dp"
                android:text="어딘가, 경기도 역암"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                style="@style/AndroidCaption6"
                android:textColor="@color/gray"/>

            <!-- 날짜 및 시간 (오른쪽에 배치) -->
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_weight="0.4"
                android:text="03.24 (일) 오후 8:00"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                style="@style/AndroidCaption6"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 소요 시간 및 참가 인원 (왼쪽 소요 시간, 오른쪽 참가 인원) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_date">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <!-- 소요 시간 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Time Icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/tvSpendTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="1"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                style="@style/AndroidCaption6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="H"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                style="@style/AndroidCaption6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">

            <!-- 참가 인원 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="People Icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/tvCurrentPeople"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text="3"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                style="@style/AndroidCaption6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                style="@style/AndroidCaption6"/>

            <TextView
                android:id="@+id/tvMaxPeople"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                style="@style/AndroidCaption6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:gravity="end">

            <TextView
                android:id="@+id/btn_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_edittext_rectangle"
                android:text="승인 대기"
                android:textColor="@color/main"
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@id/btn_update"
                app:layout_constraintEnd_toStartOf="@id/btn_update"/>

            <!-- 참여하기 버튼 (오른쪽 아래) -->
            <TextView
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext_main"
                android:text="    수정    "
                android:textColor="@color/white"
                style="@style/AndroidCaption2"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
