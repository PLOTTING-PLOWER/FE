<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_flower"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SSU"
                android:textColor="@color/gray"
                android:includeFontPadding="false"
                style="@style/AndroidCaption1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:text="2024.10.22 12:00"
                    android:gravity="end"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/gray"
                    android:includeFontPadding="false"
                    style="@style/AndroidCaption3" />

                <ImageView
                    android:id="@+id/iv_option"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_option"
                    android:layout_gravity="end">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="같이 플로깅 할래?"
            style="@style/AndroidBody4"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/ll_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                style="@style/AndroidBody4"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:hint="수정할 내용을 입력하세요" /> <!-- 필요에 따라 배경 설정 -->

            <TextView
                android:id="@+id/btn_modify"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="수정"
                style="@style/AndroidCaption3"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/shape_text_full"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/custom_progress_bar"
        android:paddingTop="10dp">
    </ImageView>
    </LinearLayout>
</LinearLayout>